{
  "name": "@sora-vp/db-migrate",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "files": [
    "dist",
    "migrations/**"
  ],
  "bin": "./dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format esm",
    "migrate": "yarn with-env tsx migrate/index.mts",
    "studio": "yarn with-env drizzle-kit studio --config src/config.ts",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "push": "yarn with-env drizzle-kit push:mysql --config src/config.ts",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@t3-oss/env-core": "^0.11.1",
    "drizzle-orm": "^0.38.4",
    "mysql2": "^3.12.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@sora-vp/eslint-config": "*",
    "@sora-vp/prettier-config": "*",
    "@sora-vp/tsconfig": "*",
    "dotenv-cli": "^7.4.4",
    "drizzle-kit": "^0.30.2",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "prettier": "@sora-vp/prettier-config"
}
