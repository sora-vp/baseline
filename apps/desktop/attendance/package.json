{
  "name": "sora-attendance-desktop",
  "version": "3.0.0",
  "description": "Aplikasi desktop untuk interface absensi sora",
  "main": "./out/main/index.js",
  "author": "Ezra Khairan Permana <ezrakhairan123@gmail.com>",
  "type": "module",
  "homepage": "https://github.com/sora-vp/baseline",
  "scripts": {
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "yarn run typecheck:node && yarn run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "yarn run typecheck && electron-vite build",
    "build:unpack": "yarn run build && electron-builder --dir",
    "build:win": "yarn run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@sora-vp/eslint-config": "*",
    "@sora-vp/prettier-config": "*",
    "@sora-vp/tailwind-config": "*",
    "@tanstack/react-query": "^5.35.1",
    "@trpc/client": "11.0.0-rc.364",
    "@trpc/react-query": "11.0.0-rc.364",
    "@trpc/server": "11.0.0-rc.364",
    "@types/node": "^20.12.9",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^9.2.0",
    "eslint-plugin-react": "^7.34.1",
    "lucide-react": "^0.390.0",
    "prettier": "^3.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "superjson": "2.2.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.0.12"
  },
  "prettier": "@sora-vp/prettier-config"
}
